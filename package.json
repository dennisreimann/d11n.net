{
  "version": "0.1.0",
  "name": "d11n.net",
  "description": "My website for Bitcoin related content.",
  "repository": "git@github.com:dennisreimann/d11n.net.git",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "clean": "rm -rf site-data.json dist/* ",
    "init": "npm-run-all -p build:data build:copy",
    "start": "npm-run-all clean init -p start:*",
    "start:articles": "onchange -i -k 'articles/**/*' 'includes/**/*' -- npm run build:articles",
    "start:data": "onchange -k 'site-data.json' 'pug.config.js' 'markdown.js' -- npm run build:pages",
    "start:pages": "onchange -i -k 'pages/**/*' -- npm run build:pages -- --watch --pretty",
    "start:styles": "npm-run-all -p 'build:styles:* -- --watch'",
    "start:serve": "browser-sync start --config browser-sync.config.js --watch",
    "build": "npm-run-all clean init -p build:* -s optimize",
    "build:articles": "node tasks/generate_articles.js",
    "build:copy": "mkdir -p dist && cp -r static/* dist",
    "build:data": "node tasks/generate_site_data.js",
    "build:pages": "node tasks/generate_pages.js",
    "build:styles": "npm-run-all -p build:styles:*",
    "build:styles:main": "postcss styles/index.css --output dist/styles/main.css",
    "build:styles:checkout": "postcss styles/checkout.css --output dist/styles/checkout.css",
    "optimize": "npm-run-all -p optimize:*",
    "optimize:styles": "csso dist/styles/main.css --output dist/styles/main.css",
    "sitemap": "node tasks/generate_sitemap.js",
    "prod": "npm-run-all build optimize sitemap"
  },
  "devDependencies": {
    "autoprefixer": "10.4.12",
    "browser-sync": "2.27.10",
    "csso-cli": "4.0.1",
    "glob": "8.0.3",
    "gray-matter": "4.0.3",
    "highlight.js": "11.6.0",
    "jstransformer-markdown-it": "3.0.0",
    "markdown-it": "13.0.1",
    "markdown-it-anchor": "8.6.5",
    "markdown-it-implicit-figures": "0.10.0",
    "markdown-it-mark": "3.0.1",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "postcss": "8.4.16",
    "postcss-calc": "8.2.4",
    "postcss-cli": "10.0.0",
    "postcss-custom-media": "8.0.2",
    "postcss-import": "15.0.0",
    "postcss-nesting": "10.2.0",
    "pug": "3.0.2",
    "sync-request": "6.1.0"
  }
}
